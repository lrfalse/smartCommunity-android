<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_ad"
        android:layout_width="match_parent"
        android:layout_height="130dp" />

    <com.allen.library.SuperTextView
        android:id="@+id/stx_business"
        app:sLeftTextString="米乐迪KTV"
        app:sLeftTextSize="16dp"
        app:sDividerLineType="none"
        app:sLeftTextColor="@color/black"
        app:sLeftBottomTextString="热销200份"
        app:sLeftBottomTextColor="@color/provider_tx_gray_color"
        app:sLeftBottomTextSize="13dp"
        app:sLeftViewGravity="left_center"
        android:layout_width="match_parent"
        app:sLeftViewMarginLeft="0dp"
        app:sRightViewMarginRight="0dp"
        app:sRightTextSize="16dp"
        app:sRightTextString="酒水"
        app:sRightTextColor="@color/black"
        app:sRightBottomTextString="　"
        android:layout_height="80dp"/>
</LinearLayout>
