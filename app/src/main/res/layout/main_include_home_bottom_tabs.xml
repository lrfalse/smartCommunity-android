<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_05"
        android:background="@color/provider_bg_gray_color" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_home_bottom_tab_height"

        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tx_tab_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/main_tabs_home_btn_selector"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingTop="2dp"
            android:text="首页"
            android:textColor="@color/main_tabs_tx_color" />

        <TextView
            android:id="@+id/tx_tab_life"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/main_tabs_life_btn_selector"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingTop="2dp"
            android:text="生活"
            android:textColor="@color/main_tabs_tx_color" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tx_tab_neighbor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:drawableTop="@drawable/main_tabs_neighbor_btn_selector"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingTop="2dp"
            android:text="邻里"
            android:textColor="@color/main_tabs_tx_color" />

        <TextView
            android:id="@+id/tx_tab_mine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/main_tabs_mine_btn_selector"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingTop="2dp"
            android:text="我的"
            android:textColor="@color/main_tabs_tx_color" />


    </LinearLayout>
</LinearLayout>

